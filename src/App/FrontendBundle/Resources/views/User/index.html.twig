{% extends "AppFrontendBundle:Theme:layout.html.twig" %}

{% block moduleName %}个人信息 / 隐私{% endblock %}

{% block body %}

    <div class="row">


        <div class="col-sm-6 col-md-6">
            <div class="panel panel-dark panel-alt widget-quick-status-post">
                <div class="panel-heading">
                    <div class="panel-btns">
                        <a href="#" class="panel-close">×</a>
                        <a href="#" class="minimize">−</a>
                    </div><!-- panel-btns -->
                    <h3 class="panel-title">我的活动板</h3>
                </div>
                <div class="panel-body">
                    <ul class="nav nav-tabs nav-justified">
                        <li class="active"><a href="#post-privates" data-toggle="tab"><i class="fa fa-file-image-o"></i> <strong>我的资料</strong></a></li>
                        <li class=""><a href="#post-checkin" data-toggle="tab"><i class="fa fa-map-marker"></i> <strong>签到</strong></a></li>
                    </ul>
                    <div class="tab-content">
                        <div id="post-privates" class="tab-pane active">

                            {% if privates %}
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="avatar">
                                        <img src="{{ asset(privates.photo) | imagine_filter('avatarBig') }}" />
                                    </div>
                                </div>
                                <div class="col-md-8">
                                    {{ form(form) }}
                                </div>
                            </div>
                            {% else %}
                                {{ form(form) }}
                            {% endif %}
                        </div>

                        <div id="post-checkin" class="tab-pane">
                            <a class="btn btn-block btn-success" href="{{ url('check_in') }}">签到</a>
                        </div>

                    </div><!-- tab-content -->

                </div><!-- panel-body -->
            </div><!-- panel -->

        </div><!-- col-sm-6 -->


        <div class="col-sm-6 col-md-6">
            <div class="panel panel-default panel-alt widget-messaging">
                <div class="panel-heading">
                    <div class="panel-btns">

                    </div><!-- panel-btns -->
                    <h3 class="panel-title">购物车</h3>
                </div>
                <div class="panel-body">
                    <ul>
                        {% for order in purchases %}
                        <li>
                            <small class="pull-right">{{ time_diff( order.createdAt ) }}</small>
                            <h4 class="sender"><a href="{{ url('home_lesson' , {'id':order.lesson.id}) }}">{{ order.lesson.name }}</a></h4>
                            <br/>
                            <p>购买状态 : {{ order.isLocked | is_done | raw }} {% if order.isLocked == 0 %}<a href="{{ url('payment' , {'lessonId':order.lesson.id}) }}">立即购买</a>{% endif %}</p>

                            订单号: {{ order.tradeId }}

                            {% if order.isLocked %}
                                <br/>开始: {{ order.startAt | date('Y-m-d') }}
                                <br/>到期: {{ order.endAt | date('Y-m-d') }}
                            {% endif %}
                        </li>
                        {% endfor %}
                    </ul>
                </div><!-- panel-body -->
            </div><!-- panel -->
        </div><!-- col-sm-6 -->



    </div>

{% endblock %}