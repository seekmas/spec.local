{% extends "AppFrontendBundle:Theme:layout.html.twig" %}

{% block moduleName %}社区{% endblock %}

{% block navigation %}

    <li><a href="{{ url('forum') }}">社区</a></li>

    {% if wasNotExist is defined %}
        帖子不存在
    {% elseif thread.removedAt != null  %}
        帖子已经被删除
    {% else %}
        <li><a href="{{ url('thread' , {'id':thread.id}) }}">{{ thread.subject }}</a></li>
    {% endif %}



{% endblock %}

{% block body %}
    <div class="contentpanel panel-email">

        <div class="row">
            <div class="col-sm-3 col-lg-2">
                {% block leftLink %}
                    <a class="btn btn-danger btn-block btn-compose-email" href="{{ url('forum') }}#create_new_posts">发帖子</a>
                {% endblock %}
                <ul class="nav nav-pills nav-stacked nav-email">
                    <li>
                        <a href="{{ url('forum') }}">
                            <i class="glyphicon glyphicon-inbox"></i> 所有讨论
                        </a>
                    </li>
                </ul>
            </div><!-- col-sm-3 -->

            <div class="col-sm-9 col-lg-10">

                <div class="panel panel-default">
                    <div class="panel-body">
                    {% if wasNotExist is defined %}
                        帖子不存在
                    {% elseif thread.removedAt != null  %}
                        帖子已经被删除
                    {% else %}
                        {% include "AppFrontendBundle:Forum:thread_content.html.twig" %}
                    {% endif %}
                    </div><!-- panel-body -->
                </div><!-- panel -->


            </div><!-- col-sm-9 -->

        </div><!-- row -->

    </div>


{% endblock %}
{% block javascripts %}
    {{ parent() }}

    <script>
        $('#reply_thread').on('click' , function(){$('#create_new_reply').ScrollTo();});
    </script>
{% endblock %}
