{% extends "AppFrontendBundle:Theme:layout.html.twig" %}

{% block moduleName %}社区{% endblock %}

{% block body %}
    <div class="contentpanel panel-email">

    <div class="row">


        <div class="col-sm-3 col-lg-2">

            {% block leftLink %}
            <button class="btn btn-danger btn-block btn-compose-email" id="posts_a_post">发帖子</button>
            {% endblock %}

            <ul class="nav nav-pills nav-stacked nav-email">
                <li class="active">
                    <a  href="{{ url('forum') }}">
                        <i class="glyphicon glyphicon-inbox"></i> 所有帖子
                    </a>
                </li>
            </ul>


        </div>


    <div class="col-sm-9 col-lg-10">

    <div class="panel panel-default">
    <div class="panel-body">

    <div class="pull-right">

    </div><!-- pull-right -->

    <h5 class="subtitle mb5">最新的帖子</h5>

        {% include "AppFrontendBundle:Forum:index_content.html.twig" %}

    </div><!-- panel-body -->
    </div><!-- panel -->

    <div id="create_new_posts" class="panel panel-default">
    <div class="panel-body">
        <h5 class="subtitle mb5">发布新帖子</h5>
        {{ form(form) }}
    </div>
    </div>

    </div><!-- col-sm-9 -->

    </div><!-- row -->

    </div>


{% endblock %}

{% block javascripts %}
{{ parent() }}

    <script>
        $('#posts_a_post').on('click' , function(){$('#create_new_posts').ScrollTo();});
    </script>
{% endblock %}