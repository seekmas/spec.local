<div class="table-responsive">
    <table class="table mb30">
        <thead>
        <tr>
            <th>{{ knp_pagination_sortable(orders, 'Id', 'p.id') }}</th>
            <th>用户名</th>
            <th{% if orders.isSorted('p.statusId') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(orders, '交易状态', 'p.statusId') }}</th>
            <th{% if orders.isSorted('p.tradeId') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(orders, '订单号', 'p.tradeId') }}</th>
            <th{% if orders.isSorted('p.createdAt') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(orders, '创建日期', 'p.createdAt') }}</th>
            <th>课程</th>
            <th>费用</th>
            <th{% if orders.isSorted('p.startAt') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(orders, '开始日期', 'p.startAt') }}</th>
            <th{% if orders.isSorted('p.endAt') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(orders, '结束日期', 'p.endAt') }}</th>
            <th></th>
        </tr>
        </thead>
        <tbody>



        {% for order in orders %}
        <tr>
            <td>{{ order.id }}</td>
            <td>{{ order.user.username }}</td>
            <td>{{ order.isLocked | is_done | raw }}</td>
            <td>{{ order.tradeId}}</td>
            <td>{{ order.createdAt | date('Y年m月d日') }}</td>
            <td>{{ order.lesson.name }}</td>
            <td>{{ order.price | currency | raw }}</td>
            <td>{% if order.startAt %}{{ order.startAt | date('Y年m月d日') }}{% endif %}</td>
            <td>{% if order.endAt %}{{ order.endAt | date('Y年m月d日') }}{% endif %}</td>
            <td class="table-action">
                <a href="#"><i class="fa fa-pencil"></i></a>
                <a href="#" class="delete-row"><i class="fa fa-trash-o"></i></a>
            </td>
        </tr>
        {% endfor %}

        </tbody>
    </table>
    <div class="navigation">
        {{ knp_pagination_render(orders) }}
    </div>

</div>